.row
  %h1.col-sm-offset-4.col-sm-4.text-center History
  -if signed_in?
    .btn-group.col-sm-offset-1.col-sm-2
      %button.btn.btn-success.dropdown-toggle(data-toggle="dropdown")<
        =@current_user.name
        %span.caret
      %ul.dropdown-menu(role="menu")
        %li
          =link_to "Log out", session_path(@current_user), method: :delete
    .clearfix.visible-sm-block.visible-md-block.visible-lg-block
    .col-sm-5.col-md-5.col-lg-5
      #header_calendar
        .btn-group
          %button.btn.btn-success.dropdown-toggle(data-toggle="dropdown")<
            =@current_user.name
            %span.caret
          %ul.dropdown-menu(role="menu")
            %li Январь
            %li Февраль
            %li Март
            %li Апрель            
      #container_calendar
    .col-sm-7.col-md-7.col-lg-7
      %input(type="date")
      %button(id="testclick") 2013 апрель
-unless signed_in?
  =render "shared/form_signin"
